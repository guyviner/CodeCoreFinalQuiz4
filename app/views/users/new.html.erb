<h1>Sign Up</h1>

<%= simple_form_for @user, defaults: {input_html: {class: 'form-vertical' } } do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <% if user_signed_in?%>
    <%= f.input :current_password %>
  <% else %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
